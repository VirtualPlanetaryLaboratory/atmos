###############################
# Load line
###############################

$(EXECUTABLE) : 	$(OBPATH) $(INCALL)
	$(FC) $(FCFLAG) -o $(EXECUTABLE) $(OBPATH)

###############################
# Object compile lines
###############################


$(OBJ)/$(MAIN).o : 	$(MAIN).f $(INCALL)
	$(FC) $(FCFLAG) -c $(MAIN).f
	mv $(MAIN).o $(OBJ)

